{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
